async function checkLogin() {
    const enteredID = document.getElementById('id').value;
    const enteredPassword = document.getElementById('password').value;

    const response = await fetch("رابط الـ API هنا");
    const users = await response.json();

    const user = users.find(u => u.user === enteredID && u.password === enteredPassword);

    if (user) {
        document.getElementById('loginContainer').classList.add('hidden');
        document.getElementById('userData').innerHTML = `
            <h2>بياناتك</h2>
            <p>رقم كارت المشاهدة: ${user.card_number}</p>
            <p>اسم العميل: ${user.client_name}</p>
            <p>الباقة: ${user.package}</p>
            <p>الموزع: ${user.distributor}</p>
            <p>تاريخ الإصدار: ${user.issue_date}</p>
            <p>تاريخ الانتهاء: ${user.end_date}</p>
            <p>المبلغ المدفوع: ${user.amount_paid} EGP</p>
            <p>إضافات: ${user.additional_purchase} EGP</p>
            <p>طريقة الدفع: ${user.payment_method}</p>
            <p>تكلفة الخدمة: ${user.cost_of_service} EGP</p>
            <p>إجمالي الدفع: ${user.total_payment} EGP</p>
            <a href="https://wa.me/201024348882" class="support-btn">تحدث مع الدعم الفني</a>
        `;
        document.getElementById('userContainer').classList.remove('hidden');
    } else {
        alert("ID أو كلمة المرور غير صحيحة!");
    }
}
