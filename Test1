<body>

    <div class="container" id="loginContainer">
        <h1>ACTIVE CODE</h1>
        <h2>أدخل الـ ID وكلمة المرور</h2>
        <input type="text" id="id" placeholder="أدخل الـ ID">
        <input type="password" id="password" placeholder="أدخل كلمة المرور">
        <button onclick="checkLogin()">تحقق</button>
    </div>

    <script>
        const idPasswords = {
            '1160': '01222741403',
            '6680': '01225416886',
            '2700': '01097699815'
        };

        function checkLogin() {
            const enteredID = document.getElementById('id').value.trim();
            const enteredPassword = document.getElementById('password').value.trim();

            // طباعة البيانات في Console لفحصها
            console.log("ID المدخل:", enteredID);
            console.log("كلمة المرور المدخلة:", enteredPassword);
            console.log("كلمة المرور المتوقعة:", idPasswords[enteredID]);

            if (idPasswords[enteredID] && idPasswords[enteredID] === enteredPassword) {
                alert("تم تسجيل الدخول بنجاح!");
            } else {
                alert('ID أو كلمة المرور غير صحيحة!');
            }
        }
    </script>

